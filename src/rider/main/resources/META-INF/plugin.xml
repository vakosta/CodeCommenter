<idea-plugin require-restart="true">
  <id>com.jetbrains.rider.plugins.codecommenter</id>
  <name>CodeCommenter</name>
  <version>1.0</version>
  <vendor url="https://project-url">vakosta</vendor>
  <idea-version since-build="223" until-build="223.*" />
  <depends>com.intellij.modules.rider</depends>

  <description>
    <![CDATA[
<p>Sample description</p>
]]>
  </description>

  <project-components>
    <component>
      <implementation-class>
        com.jetbrains.rider.plugins.codecommenter.toolwindows.StatisticsToolWindowModelHost
      </implementation-class>
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
    <rdclient.view
        key="com.jetbrains.rd.ide.model.BeStatisticsToolWindowPanel"
        implementationClass="com.jetbrains.rider.plugins.codecommenter.toolwindows.StatisticsToolWindowPanel" />

    <toolWindow
        id="Statistics"
        secondary="true"
        icon="AllIcons.General.Modified"
        anchor="right"
        factoryClass="com.jetbrains.rider.plugins.codecommenter.toolwindows.StatisticsToolWindowFactory" />
  </extensions>

</idea-plugin>
